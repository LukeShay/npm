{
	"name": "root",
	"private": true,
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/lukeshay/npm.git",
		"directory": "."
	},
	"license": "MIT",
	"author": "Luke Shay <https://lukeshay.com>",
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"scripts": {
		"lint": "eslint --ignore-path .gitignore .",
		"lint:fix": "yarn lint --fix",
		"prettier": "prettier --ignore-path .gitignore --ignore-unknown --no-error-on-unmatched-pattern --check .",
		"prettier:fix": "yarn prettier --write"
	},
	"lint-staged": {
		"*": [
			"prettier --ignore-unknown --write",
			"git add"
		]
	},
	"dependencies": {
		"@changesets/changelog-github": "^0.4.7"
	},
	"devDependencies": {
		"@changesets/cli": "^2.25.0",
		"@lshay/eslint-config": "workspace:^",
		"@lshay/prettier-config": "workspace:^",
		"@types/node": "^16",
		"@vercel/git-hooks": "^1.0.0",
		"eslint": "^8.24.0",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"rimraf": "^3.0.2",
		"typescript": "^4.8.4"
	},
	"packageManager": "yarn@3.2.4",
	"engines": {
		"node": ">=14"
	}
}
