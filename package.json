{
  "name": "root",
  "private": true,
  "author": "Luke Shay <https://lukeshay.com>",
  "scripts": {
    "analyze": "lerna run analyze",
    "build": "lerna run build",
    "fmt": "prettier --write --ignore-unknown --no-error-on-unmatched-pattern './**/*'",
    "lint": "lerna run lint",
    "new": "tsdx create",
    "size": "lerna run size",
    "test": "lerna run test",
    "prerelease": "run-p lint build test",
    "release": "lerna version --no-git-tag-version --no-push",
    "prepublish": "run-p lint build test",
    "publish": "lerna publish from-package"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.2",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "size-limit": "^5.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lerna run lint"
    }
  },
  "engines": {
    "npm": ">=7",
    "node": ">=14"
  }
}
