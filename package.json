{
  "name": "root",
  "private": true,
  "author": "Luke Shay <https://lukeshay.com>",
  "scripts": {
    "analyze": "lerna run analyze",
    "build": "lerna run build",
    "prettier": "prettier --ignore-unknown --no-error-on-unmatched-pattern --ignore-path .gitignore './**/*'",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --check",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "clean": "lerna run clean",
    "new": "tsdx create",
    "size": "lerna run size",
    "test": "lerna run test",
    "prerelease": "run-p lint build test prettier:check size",
    "release": "lerna version --no-git-tag-version --no-push",
    "prenpm": "run-p lint build test prettier:check size",
    "npm": "lerna publish from-package",
    "bootstrap": "lerna bootstrap",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@jest/types": "27.4.2",
    "@size-limit/preset-small-lib": "5.0.2",
    "@types/chance": "1.1.3",
    "chance": "1.1.8",
    "eslint": "8.7.0",
    "eslint-config-get-off-my-lawn": "7.0.0-beta.7",
    "eslint-plugin-sonarjs": "0.11.0",
    "husky": "7.0.4",
    "lerna": "4.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "size-limit": "5.0.2",
    "tsdx": "0.14.1",
    "tslib": "2.3.1",
    "typescript": "4.5.5"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lerna run fmt"
    }
  },
  "engines": {
    "npm": ">=7",
    "node": ">=16"
  }
}
