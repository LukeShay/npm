{
  "name": "root",
  "private": true,
  "author": "Luke Shay <https://lukeshay.com>",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "prettier": "prettier --ignore-unknown --no-error-on-unmatched-pattern --ignore-path .gitignore './**/*'",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --check",
    "prelint": "lerna run build",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "clean": "lerna run clean",
    "new": "tsdx create",
    "test": "lerna run test",
    "check": "run-p lint build test prettier:check",
    "prerelease": "npm run check",
    "release": "lerna version --no-git-tag-version --no-push",
    "prenpm": "npm run check",
    "npm": "lerna publish from-package",
    "bootstrap": "lerna bootstrap",
    "postinstall": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run fmt"
    }
  },
  "dependencies": {
    "@lukeshay/logger": "file:packages/lukeshay-logger",
    "@lukeshay/next-ga": "file:packages/lukeshay-next-ga",
    "@lukeshay/next-router": "file:packages/lukeshay-next-router"
  },
  "devDependencies": {
    "@jest/types": "27.5.1",
    "@size-limit/preset-small-lib": "7.0.5",
    "@types/chance": "1.1.3",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "chance": "1.1.8",
    "eslint": "8.8.0",
    "eslint-config-get-off-my-lawn": "7.0.0-beta.7",
    "eslint-plugin-sonarjs": "0.11.0",
    "husky": "7.0.4",
    "lerna": "4.0.0",
    "next": "12.0.10",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "size-limit": "7.0.5",
    "tsdx": "0.14.1",
    "tslib": "2.3.1",
    "typescript": "4.5.5"
  },
  "engines": {
    "node": ">=14"
  }
}
