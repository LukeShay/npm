{
	"name": "root",
	"private": true,
	"repository": {
		"type": "git",
		"url": "ssh://git@github.com/lukeshay/npm.git",
		"directory": "."
	},
	"license": "MIT",
	"author": "Luke Shay <https://lukeshay.com>",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"lint": "eslint --ignore-path .gitignore .",
		"lint:fix": "yarn lint --fix",
		"prettier": "prettier --ignore-path .gitignore --ignore-unknown --no-error-on-unmatched-pattern --check .",
		"prettier:fix": "yarn prettier --write"
	},
	"lint-staged": {
		"*": [
			"prettier --ignore-unknown --write",
			"git add"
		]
	},
	"dependencies": {
		"@changesets/changelog-github": "^0.4.8"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.0",
		"@lshay/eslint-config": "workspace:^",
		"@lshay/prettier-config": "workspace:^",
		"@types/node": "^18",
		"@vercel/git-hooks": "^1.0.0",
		"eslint": "^8.36.0",
		"lint-staged": "^13.2.0",
		"prettier": "^2.8.4",
		"rimraf": "^4.4.0",
		"typescript": "^5.0.2"
	},
	"packageManager": "yarn@3.2.4",
	"engines": {
		"node": "16.x || 18.x"
	},
	"publishConfig": {
		"access": "public"
	}
}
